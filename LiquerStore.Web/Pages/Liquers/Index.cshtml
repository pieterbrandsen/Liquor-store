@page
@model LiquerStore.Web.Pages.Liquers.IndexModel

@{
    ViewData["Title"] = "Producten";
}

<h1>Producten</h1>

<p>
    <a asp-page="Create">Maak een whisky</a>
</p>
<br />
<table id="table" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WhiskyModel.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhiskyModel.First().Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhiskyModel.First().ProductionArea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhiskyModel.First().AlcoholPercentage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhiskyModel.First().Kind)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhiskyModel.First().Count)
            </th>
            <th>
                Aanpassen
            </th>
            <th>
                Alle gegevens
            </th>
            <th>
                Uit/aanzetten
            </th>
        </tr>
    </thead>
</table>

@section Scripts {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.22/datatables.min.css" />

    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.22/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#table').DataTable({
                data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.WhiskyModel)),
                processing: true, // for show progress bar
                serverSide: false, // for process server side
                filter: true, // this is for disable filter (search box)
                orderMulti: false, // for disable multiple column at once
                columns: [
                    { "data": "Name", "name": "@Html.DisplayNameFor(model => model.WhiskyModel.First().Name)" },
                    { "data": "Age", "name": "@Html.DisplayNameFor(model => model.WhiskyModel.First().Age)" },
                    { "data": "ProductionArea", "name": "@Html.DisplayNameFor(model => model.WhiskyModel.First().ProductionArea)" },
                    { "data": "AlcoholPercentage", "name": "@Html.DisplayNameFor(model => model.WhiskyModel.First().AlcoholPercentage)" },
                    { "data": "Kind", "name": "@Html.DisplayNameFor(model => model.WhiskyModel.First().Kind)" },
                    { "data": "Count", "name": "@Html.DisplayNameFor(model => model.WhiskyModel.First().Count)" },
                    {
                        "render": function (data, type, full, meta)
                        { return `<a class="btn btn-info" href="/Liquers/Edit?Id=${full.Id}">Aanpassen</a>`; }
                    },
                    {
                        "render": function (data, type, full, meta)
                        { return `<a class="btn btn-warning" href="/Liquers/Details?Id=${full.Id}">Alle gegevens</a>`; }
                    },
                    {
                        "render": function (data, type, full, meta)
                        {
                            if (full.SoftDeleted === false) {
                                return `<a class="btn btn-danger" href="/Liquers/Disable?Id=${full.Id}">Zet uit</a>`;

                            }
                            else return `<a class="btn btn-success" href="/Liquers/Enable?Id=${full.Id}">Zet aan</a>`;
                        }
                    },
                ]
            });
        });
    </script>
}
