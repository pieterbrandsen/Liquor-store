@page
@model LiquerStore.Web.Pages.Liquers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Maak een whisky</a>
</p>
<br />
<table id="table" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WhiskyModel[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhiskyModel[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhiskyModel[0].ProductionArea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhiskyModel[0].AlcoholPercentage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhiskyModel[0].Kind)
            </th>
            <th>
                Aanpassen
            </th>
            <th>
                Alle gegevens
            </th>
            <th>
                Uitzetten
            </th>
        </tr>
    </thead>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#table').DataTable({
                data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.WhiskyModel)),
                processing: true, // for show progress bar
                serverSide: false, // for process server side
                filter: true, // this is for disable filter (search box)
                orderMulti: false, // for disable multiple column at once
                columns: [
                    { "data": "Name", "name": "@Html.DisplayNameFor(model => model.WhiskyModel[0].Name)" },
                    { "data": "Age", "name": "@Html.DisplayNameFor(model => model.WhiskyModel[0].Age)" },
                    { "data": "ProductionArea", "name": "@Html.DisplayNameFor(model => model.WhiskyModel[0].ProductionArea)" },
                    { "data": "AlcoholPercentage", "name": "@Html.DisplayNameFor(model => model.WhiskyModel[0].AlcoholPercentage)" },
                    { "data": "Kind", "name": "@Html.DisplayNameFor(model => model.WhiskyModel[0].Kind)" },
                    {
                        "render": function (data, type, full, meta)
                        { return '<a class="btn btn-info" href="/Liquers/Edit?Id=' + full.Id + '"> test </a>'; }
                    },
                    {
                        "render": function (data, type, full, meta)
                        { return '<a class="btn btn-error" href="/Liquers/Details?Id=' + full.Id + '"> test </a>'; }
                    },
                    {
                        "render": function (data, type, full, meta)
                        { return '<a class="btn btn-danger" href="/Liquers/Disable?Id=' + full.Id + '"> test </a>'; }
                    },
                ]
            });
        });
    </script>
}
