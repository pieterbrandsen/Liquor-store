@page
@model LiquerStore.Web.Pages.Liquers.IndexModel

@{
    ViewData["Title"] = "Producten";
}

<h1>Producten</h1>

<p>
    <a asp-page="Create">Maak een whisky</a>
</p>
<br />
<table id="table" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(w => w.StorageModels.First().Whisky.Name)
            </th>
            <th>
                @Html.DisplayNameFor(w => w.StorageModels.First().Whisky.Age)
            </th>
            <th>
                @Html.DisplayNameFor(w => w.StorageModels.First().Whisky.ProductionArea)
            </th>
            <th>
                @Html.DisplayNameFor(w => w.StorageModels.First().Whisky.AlcoholPercentage)
            </th>
            <th>
                @Html.DisplayNameFor(w => w.StorageModels.First().Whisky.Kind)
            </th>
            <th>
                Aanpassen
            </th>
            <th>
                Alle gegevens
            </th>
            @if (User.Identity.IsAuthenticated)
            {
                <th>
                    Reserveren
                </th>
            }
        </tr>
    </thead>
</table>

@section Scripts {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.22/datatables.min.css" />

    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.22/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            var settings = {
                data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.StorageModels)),
                processing: true, // for show progress bar
                serverSide: false, // for process server side
                filter: true, // this is for disable filter (search box)
                orderMulti: false, // for disable multiple column at once
                columns: [
                    {
                        "data": "Name", "render": function (data, type, full, meta) {
                            return full.Whisky.Name;
                        }
                    },
                    {
                        "data": "Age", "render": function (data, type, full, meta) {
                            return full.Whisky.Age;
                        }
                    },
                    {
                        "data": "ProductionArea", "render": function (data, type, full, meta) {
                            return full.Whisky.ProductionArea;
                        }
                    },
                    {
                        "data": "AlcoholPercentage", "render": function (data, type, full, meta) {
                            return full.Whisky.AlcoholPercentage;
                        }
                    },
                    {
                        "data": "Kind", "render": function (data, type, full, meta) {
                            return full.Whisky.Kind;
                        }
                    },
                    {
                        "render": function (data, type, full, meta) {
                            return `<a class="btn btn-info" href="/Liquers/Edit?Id=${full.Id}">Aanpassen</a>`;
                        }
                    },
                    {
                        "render": function (data, type, full, meta) {
                            return `<a class="btn btn-warning" href="/Liquers/Details?Id=${full.Id}">Alle gegevens</a>`;
                        }
                    },
                ]
            };

            if ("@User.Identity.IsAuthenticated" === "True") {
                settings.columns.push({
                    "render": function (data, type, full, meta) {
                        return `<a class="btn btn-success" href="/Liquers/Reserve?Id=${full.Id}">Alle gegevens</a>`;
                    }
                });
            }

            $('#table').DataTable(settings);
        });
    </script>
}
