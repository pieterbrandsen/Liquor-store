@page
@model LiquerStore.Web.Pages.Liquers.CreateModel
@using LiquerStore.DAL.Models;

@{
    ViewData["Title"] = "Aanmaken";
}

<h1>Product aanmaken</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StorageModel.Whisky.Name" class="control-label"></label>
                <input asp-for="StorageModel.Whisky.Name" class="form-control" />
                <span asp-validation-for="StorageModel.Whisky.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StorageModel.Whisky.Age" class="control-label"></label>
                <input asp-for="StorageModel.Whisky.Age" max="255" class="form-control" />
                <span asp-validation-for="StorageModel.Whisky.Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StorageModel.Whisky.ProductionArea" class="control-label"></label>
                <input asp-for="StorageModel.Whisky.ProductionArea" class="form-control" />
                <span asp-validation-for="StorageModel.Whisky.ProductionArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StorageModel.Whisky.AlcoholPercentage" class="control-label"></label>
                <input asp-for="StorageModel.Whisky.AlcoholPercentage" class="form-control" />
                <span asp-validation-for="StorageModel.Whisky.AlcoholPercentage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StorageModel.Whisky.Kind" class="control-label"></label>
                <select asp-for="StorageModel.Whisky.Kind" asp-items="Html.GetEnumSelectList<WhiskyKind>()" class="form-control"><option>Selecteer een optie ...</option></select>
                <span asp-validation-for="StorageModel.Whisky.Kind" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StorageModel.Whisky.LabelPath" class="control-label"></label>
                <input asp-for="StorageModel.Whisky.LabelPath" class="form-control" />
                <span asp-validation-for="StorageModel.Whisky.LabelPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Maak aan" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Terug naar product lijst</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
