@page
@using Newtonsoft.Json
@model LiquerStore.Web.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Producten";
}

<h1>Producten</h1>

<p>
    <a asp-page="Create">Maak een whisky</a>
</p>
<br/>
<table id="table" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(w => w.Products.First().Whisky.Name)
            </th>
            <th>
                @Html.DisplayNameFor(w => w.Products.First().Whisky.Age)
            </th>
            <th>
                @Html.DisplayNameFor(w => w.Products.First().Whisky.ProductionArea)
            </th>
            <th>
                @Html.DisplayNameFor(w => w.Products.First().Whisky.AlcoholPercentage)
            </th>
            <th>
                @Html.DisplayNameFor(w => w.Products.First().Whisky.Kind)
            </th>
            <th>
                @Html.DisplayNameFor(w => w.Products.First().Available)
            </th>
            <th>
                Aanpassen
            </th>
            <th>
                Alle gegevens
            </th>
            <th>
                Actief
            </th>
        </tr>
    </thead>
</table>

@section Scripts {
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.22/datatables.min.css"/>

    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.22/datatables.min.js"></script>

    <script type="module">
        import { dataTable } from "/js/dataTableProducts.js";
        dataTable(@Html.Raw(JsonConvert.SerializeObject(Model.Products)));
    </script>
}